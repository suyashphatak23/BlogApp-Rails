<figure class="attachment attachment--<%= blob.representable? ? "preview" : "file" %> attachment--<%= blob.filename.extension %> p-2">
  <% if blob.representable? %>
    <%= image_tag blob.representation(resize_to_limit: local_assigns[:in_gallery] ? [ 800, 600 ] : [ 1024, 768 ]), class:"rounded mx-auto d-block shadow-lg" %>
  <% end %>

  <figcaption class="attachment__caption text-center text-muted fw-bold mt-3">
    <% if (caption = blob.try(:caption)) %>
      <%= caption %>
    <% else %>
      <span class="attachment__name"><%= blob.filename %></span>
      <!--      <span class="attachment__size"><%#= number_to_human_size blob.byte_size %></span>-->
    <% end %>
  </figcaption>
</figure>
