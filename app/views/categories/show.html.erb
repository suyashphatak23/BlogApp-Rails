<section style="padding-top: 2rem; padding-bottom: 2.5rem;">
  <div class="container text-center">
    <div class="d-flex justify-content-center">
      <h1 class="mt-2 category-detail-tag">
        <svg width="22" height="22">
          <path d="M4.66 8.72L3.43 9.95a1.75 1.75 0 0 0 0 2.48l5.14 5.13c.7.7 1.8.69 2.48 0l1.23-1.22 5.35-5.35a2 2 0 0 0 .51-1.36l-.32-4.29a2.42 2.42 0 0 0-2.15-2.14l-4.3-.33c-.43-.03-1.05.2-1.36.51l-.79.8-2.27 2.28-2.28 2.27zm9.83-.98a1.25 1.25 0 1 0 0-2.5 1.25 1.25 0 0 0 0 2.5z" fill-rule="evenodd"></path>
        </svg>
      </h1>
      <h1 class="mt-2 category-detail-heading">
        <%= @category.name %>
      </h1>
      <% if logged_in? && current_user.admin? %>
        <%= link_to " ", edit_category_path(@category), class: "fa-regular fa-pen-to-square edit-icon text-primary", style:"padding: 20px 10px; margin: 15px 0;font-weight:900;" %>
      <% end %>
    </div>
    <p class="category-detail-description mx-4">
      <%= @category.desc %>
    </p>


    <%= render 'articles/article' %>

    <div class="apple_pagination my-3">
      <p class="page_info">
        <%= page_entries_info @articles %>
      </p>
      <%= will_paginate @articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  </div>
</section>


