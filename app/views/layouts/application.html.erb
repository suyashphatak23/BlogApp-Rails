<!DOCTYPE html>
<html lang="en">
	<head>
		<!-- Meta tags Start -->
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<%= csrf_meta_tags %> <%= csp_meta_tag %>
		<!-- Meta tags End -->

		<!-- CSS & Bootstrap Start-->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
		rel="stylesheet"
		/>
		<%= stylesheet_link_tag "application", media: 'all',
		"data-turbo-track":"reload" %>
		<!-- CSS & Bootstrap End -->

		<!-- Google Font Start -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Lato:wght@700&family=Montserrat&family=Open+Sans&family=Poppins:wght@500&display=swap" rel="stylesheet">
		<!-- Google Font End -->

		<!-- Title Start -->
		<link rel = "icon" href =
			"https://icon-library.com/images/knowledge-icon-png/knowledge-icon-png-17.jpg"
					type = "image/x-icon">
		<title>Blog</title>

		<!-- Title End -->

		<!-- Script Start -->
		<%= javascript_importmap_tags %>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
		<!-- Script End -->
	</head>

	<body>

		<!--Nav Start-->
		<%= render 'layouts/navigation' %>
		<!--Nav End-->

		<!--	Msgs Start-->
		<%= render 'layouts/messages' %>
		<!-- Msgs End -->

		<%= yield %>

		<!--Footer Start-->
		<%= render 'layouts/footer' %>
		<!--Footer End-->
	</body>
</html>
