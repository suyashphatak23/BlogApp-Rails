<!DOCTYPE html>
<html>
	<head>
		<!-- Meta tags Start -->
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<%= csrf_meta_tags %> <%= csp_meta_tag %>
		<!-- Meta tags End -->

		<!-- CSS & Bootstrap Start-->
		<link rel="stylesheet" href="https://kit.fontawesome.com/a9f0ea7ae6.css" crossorigin="anonymous">
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
		rel="stylesheet"
		/>
		<%= stylesheet_link_tag "application", media: 'all',
		"data-turbo-track":"reload" %>
		<!-- CSS & Bootstrap End -->

		<!-- Google Font Start -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@600&family=Open+Sans&family=Oswald&family=Raleway&display=swap"
			rel="stylesheet"
		/>
		<!-- Google Font End -->

		<!-- Title Start -->
		<title>Blog</title>
		<!-- Title End -->

		<!-- Script Start -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
		<!-- Script End -->
	</head>

	<body>
		<%= render 'layouts/navigation' %> 
		<%= render 'layouts/messages' %> 
		<%= yield %>
	</body>
</html>
