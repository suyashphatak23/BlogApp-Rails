<div class="container">
	<%= render 'layouts/messages' %>

  <h1 class="text-center mt-4 text-uppercase">
		<%= @user.username %>'s profile
	</h1>

	<%= link_to image_tag(@user.avatar_medium), @user.avatar %>
  <% if logged_in? && @user == current_user %>
    <div class="text-center mt-4">
      <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
    </div>
  <% end %>

  <h3 class="text-center mt-4">Articles</h3>
  <%= render 'articles/article' %>

	<div class="apple_pagination my-3">
		<p class="page_info">
			<%= page_entries_info @articles %>
		</p>
		<%= will_paginate @articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
	</div>

</div>
