<section class="user-edit bg-white">
  <div class="container text-center">
    <div class="row justify-content-center mb-3 pb-1">
      <div class="col-md-7 heading-section text-center">
        <h2 class="mb-4">Edit User</h2>
        <p>
          Instructions<br>
          <span class="text-danger">*</span> All fields can be updated.<br>
        </p>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-7 user-edit-form shadow">
        <h2 class="mb-4">Enter Details</h2>
        <%= form_with(model: @user, local: true) do |f| %>
          <div class="form-floating mb-3">
            <%= f.text_field :username, class: "form-control", placeholder: "name123", id:"floatingInput"%>
            <%= f.label :username,"Username",for:"floatingInput" %>
          </div>
          <div class="form-floating mb-3">
            <%= f.email_field :email, class: "form-control", placeholder: "name@example.com", id:"floatingInput"%>
            <%= f.label :email,"Email Address",for:"floatingInput" %>
          </div>
          <div class="form-floating mb-3">
            <%= f.password_field :password, class: "form-control", id:"floatingInput"%>
            <%= f.label :password, "Password",for:"floatingInput" %>
          </div>
          <div class="form-floating mb-3">
            <%= f.file_field :avatar, class: "form-control", id:"floatingInput"%>
            <%= f.label :profile, "Profile Picture",for:"floatingInput" %>
          </div>
          <div class="form-group justify-content-center">
            <%= f.submit class: "btn btn-outline-primary mt-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
