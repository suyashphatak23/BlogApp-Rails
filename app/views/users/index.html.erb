<div class="container">
	<h1 class="display-4 text-center">All Users</h1>
	<% @users.each do |user| %>
	<div class="row justify-content-md-center">
		<div class="col-8 mt-4">
			<div class="card text-center shadow mb-5 bg-dark rounded">
				<div class="card-header font-italic">
					<%= link_to user.username, user, class:"nav-link text-uppercase" %>
				</div>
				<div class="card-body">
					<h5 class="card-title"><%= link_to gravatar_for(user), user %></h5>
					<p class="card-text">
						<%= pluralize(user.articles.count, "article") %>
					</p>
					<%= link_to "View profile", user, class: "btn btn-outline-success" %>
					<% if logged_in? %> <% if user == current_user %> <%= link_to "Edit
					profile", edit_user_path(user), class: "btn btn-outline-info" %> <%
					end %> <% end %>
				</div>
				<div class="card-footer text-muted">
					<small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
				</div>
			</div>
		</div>
	</div>
	<% end %>
</div>

<div class="container text-center">
	<div class="apple_pagination">
		<div class="page_info"><%= page_entries_info @users %></div>
		<%= will_paginate @users, :container => false %>
	</div>
</div>
