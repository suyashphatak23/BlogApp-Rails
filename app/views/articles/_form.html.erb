<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      
      <%= render partial:'shared/errors', locals: {obj: @article} %>

      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded text-black", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.rich_text_area :body, rows: 10, class: "form-control shadow rounded text-black", placeholder: "Description of article" %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 3, class: "form-select shadow rounded text-black" }) %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :thumbnail, class: "col-2 col-form-label text-light", for: "formFile" %>
          <div class="col-10"> 
            <%= f.file_field :thumbnail, class:"form-control", id: "formFile" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :banner, class: "col-2 col-form-label text-light", for: "formFile" %>
          <div class="col-10"> 
            <%= f.file_field :banner, class:"form-control", id: "formFile" %>
          </div>
        </div>

        <div class="form-group justify-content-center">
          <%= f.submit class: "btn btn-outline-light mt-2" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "btn btn-outline-info" %>
    </div>
  </div>
</div>