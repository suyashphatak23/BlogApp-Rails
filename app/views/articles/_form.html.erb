<div class="container">
  <div class="justify-content-center">
    
    <%= render partial:'shared/errors', locals: {obj: @article} %>

    <%= form_with(model: @article, class: "shadow p-3 mb-3 rounded", local: true) do |f| %>
      <div class="form-group">
        <%= f.label :title, class: "col-2 col-form-label" %>
        <%= f.text_field :title, class: "form-control shadow rounded text-black", placeholder: "Title of article" %>
      </div>

      <div class="form-group">
        <%= f.label :description, class: "col-2 col-form-label" %>
        <%= f.text_area :body , class:"form-control"%>
      </div>
      
      <div class="form-group">
        <%= f.label :category, class: "col-2 col-form-label" %>
        <%= f.collection_select(:category_ids, Category.all, :id, :name,
        { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 3, class: "form-select shadow rounded text-black" }) %>

      </div>

      <div class="form-group">
        <%= f.label :thumbnail, class: "col-2 col-form-label", for: "formFile" %>
        <%= f.file_field :thumbnail, class:"form-control", id: "formFile" %>
      </div>
      
      <div class="form-group">
        <%= f.label :banner, class: "col-2 col-form-label", for: "formFile" %>
        <%= f.file_field :banner, class:"form-control", id: "formFile" %>
      </div>
      
      <div class="form-group">
        <%= f.label :content, class: "col-2 col-form-label" %>
        <%= f.rich_text_area :content, class:"form-control" %>
      </div>

      <div class="form-group justify-content-center">
        <%= f.submit class: "btn btn-outline-dark mt-2" %>
      </div>
      <% end %>
    </div>


    <div class="mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "btn btn-outline-info" %>
    </div>
  </div>
</div>