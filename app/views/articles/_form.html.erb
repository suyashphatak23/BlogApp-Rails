
<div class="container mt-3">

  <%= render partial:'shared/errors', locals: {obj: @article} %>

  <%= form_with(model: @article, class: "p-3 mb-3", local: true) do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Title will be displayed on all pages.", :required => true %>
    </div>

    <div class="form-group">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :body , class:"form-control", placeholder: "Description will be displayed on all pages.", required: true, rows: 5 %>
    </div>

    <div class="form-group">
      <%= f.label :category, class: "form-label" %>
      <%= f.collection_select(:category_ids, Category.all, :id, :name,
                              { prompt: "(You can make multiple selection from the list below or can be empty)"}, { multiple: true, size: 5, class: "form-select" }) %>

    </div>

    <div class="form-group">
      <%= f.label :thumbnail, class: "form-label", for: "formFile" %>
      <%= f.file_field :thumbnail, class:"form-control", id: "formFile", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :banner, class: "form-label", for: "formFile" %>
      <%= f.file_field :banner, class:"form-control", id: "formFile", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :content, class: "form-label" %>
      <div class="overflow-auto form-control">
          <%= f.rich_text_area :content, style:"height:300px;text-align:left;",placeholder: "Description will be displayed on all pages.", required: true %>
      </div>
    </div>

    <div class="form-group text-center">
      <%= f.submit class: "btn btn-outline-dark mt-2" %>
    </div>
  <% end %>
</div>
