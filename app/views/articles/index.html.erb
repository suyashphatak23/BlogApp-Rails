
<div class="container text-center">
    <h1 class="display-4"> All Articles</h1>
    <table class="table table-dark table-bordered table-hover">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Author</th>
            <th>Updated At</th>
        </tr>
        <% @articles.each do |article| %>
        <tr class="table-light">
            <td><%= link_to article.title, article, class:"nav-link" %></td>
            <td><%= article.body %></td>
            <td class="text-capitalize"><%= article.user.username %></td>
            <td><%= time_ago_in_words(article.updated_at) %> Ago</td>
        </tr>
        <% end %>
    </table>
</div>

